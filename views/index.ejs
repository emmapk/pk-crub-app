<%- include("layout/header") %>

<div class="container">
    <div class="row my-4">
        <div class="col-12"> <!-- Fixed class from col-1g-12 to col-12 -->
            <% if (message) { %>
                <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                    <strong><%= message.message %></strong>
                    <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            <% } %>

            <div class="table-responsive">
                <% if (users.length > 0) { %> <!-- Changed condition to check for length -->
                    <table class="table table-striped text-center my-3">
                        <thead>
                            <tr class="table-dark">
                                <th>ID</th>
                                <th>Image</th>
                                <th>Name</th>
                                <th>E-Mail</th>
                                <th>Phone Number</th>
                                <th>Actions</th> 
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach((user, index) => { %>
                                <tr>
                                    <td><%= index + 1 %></td> <!-- Display user index -->
                                    <td><img src="<%= user.image %>" alt="User Image" class="img-thumbnail" width="50"></td> <!-- Display user image -->
                                    <td><%= user.name %></td>
                                    <td><%= user.email %></td>
                                    <td><%= user.phone %></td>
                                    <td>
                                        <a href="/edit/<%= user._id %>" class="text-success">
                                            <i class="fas fa-edit fa-lg mx-1"></i>
                                        </a>
                                        <a href="/delete/<%= user._id %>" class="text-danger" onclick="return confirm('Are you sure you want to delete this user?');">
                                            <i class="fas fa-trash fa-lg mx-1"></i>
                                        </a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                <% } else { %>
                    <h1 class="text-center text-secondary mt-5">No users found in the database!</h1>
                <% } %>
            </div>
        </div>
    </div>
</div>

<%- include("layout/footer") %>
