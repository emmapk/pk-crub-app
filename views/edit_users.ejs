
<link rel="stylesheet" href="css/styles.css">

<div class="form-container">
    <%- include("layout/header") %>

    <h2>Edit User (<%=  user.name %>) <i class="fa fa-user" aria-hidden="true"></i></h2>
    <form action="/update/<%= user._id %>" method="POST" id="add-form" enctype="multipart/form-data">
        
        <!-- Name -->

        <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" id="name" value="<%= user.name %>" name="name" required>
        </div>

        <!-- Email -->
        <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" id="email" value="<%= user.email %>" name="email" required>
        </div>

        <!-- Phone -->
        <div class="form-group">
            <label for="phone">Phone:</label>
            <input type="tel" id="phone" value="<%= user.phone %>" name="phone" required>
        </div>

        <!-- Password -->
        <!-- <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" required>
        </div> -->

        <!-- Image Upload -->
        <div class="form-group">
            <label for="image">Upload Image:</label>
            <input type="file" id="image" name="image" accept="image/*" required>
            <img src="/<%= user.image %>" width="100" class="img-thumbnail mt-1">
        </div>
        <input type="hidden" name="old_image" value="<%= user.image %>" id="">

        <!-- Submit Button -->
        <div class="form-group">
            <button type="submit" value="Update User" class="btn btn-success btn-1g" >Submit</button>
        </div>

<%- include("layout/footer") %>
